{
  "watch": ["src", "*.js", "*.json", ".env"],
  "ext": "js,json,env",
  "ignore": ["node_modules", "dist", "build", "logs", ".git", ".eslintrc.json"],
  "delay": 500,
  "verbose": false,
  "exec": "npm run validate:types -- {{filename}} && eslint . --fix && node app.js",
  "events": {
    "restart": "echo '\nüîç Checking code quality...\n'"
  },
  "env": {
    "NODE_ENV": "local"
  }
}
