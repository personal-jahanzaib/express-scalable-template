{
  "watch": [
    "src",
    "*.js",
    "*.json",
    ".env"
  ],
  "ext": "js,json,env",
  "ignore": [
    "node_modules",
    "dist",
    "build",
    "logs",
    ".git",
    ".eslintrc.json"
  ],
  "delay": 50,
  "verbose": false,
  "quiet": true,
  "exec": "node scripts/nodemon-exec.js {{filename}}",
  "events": {
    "start": "node scripts/nodemon-events.js start",
    "restart": "node scripts/nodemon-events.js restart"
  },
  "env": {
    "NODE_ENV": "local"
  }
}