{
    "name": "express-scalable-template",
    "version": "1.0.0",
    "description": "A production-ready, scalable Express.js template with PostgreSQL, JWT authentication, ESLint, Prettier, and automated code quality checks. Features environment-based configuration, auto-formatting/linting on file changes, and modern ES6+ best practices.",
    "homepage": "https://github.com/personal-jahanzaib/express-scalable-template#readme",
    "bugs": {
        "url": "https://github.com/personal-jahanzaib/express-scalable-template/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/personal-jahanzaib/express-scalable-template.git"
    },
    "license": "MIT",
    "author": "Jahan Zaib",
    "type": "module",
    "main": "app.js",
    "scripts": {
        "dev": "nodemon app.js",
        "start": "node app.js",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "format": "prettier --write .",
        "format:check": "prettier --check ."
    },
    "dependencies": {
        "dotenv": "^17.2.3",
        "express": "^5.2.1",
        "jsonwebtoken": "^9.0.3",
        "pg": "^8.16.3",
        "pg-hstore": "^2.3.4",
        "sequelize": "^6.37.7"
    },
    "devDependencies": {
        "eslint": "^8.57.1",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-import-resolver-node": "^0.3.9",
        "eslint-plugin-import": "^2.32.0",
        "eslint-plugin-prettier": "^5.5.4",
        "husky": "^9.1.7",
        "lint-staged": "^16.2.7",
        "nodemon": "^3.1.11",
        "prettier": "^3.7.4"
    },
    "lint-staged": {
        "*.js": [
            "eslint --fix",
            "prettier --write"
        ],
        "*.json": [
            "prettier --write"
        ]
    },
    "imports": {
        "#server": "./src/server/server.js",
        "#env": "./env.js",
        "#routes": "./src/exports/routes.js",
        "#controllers": "./src/exports/controller.js",
        "#services": "./src/exports/services.js",
        "#models": "./src/exports/models.js",
        "#utils": "./src/exports/utils.js",
        "#middlewares": "./src/exports/middlewares.js",
        "#schemas": "./src/exports/schemas.js",
        "#constants": "./src/exports/constants.js",
        "#configs": "./src/exports/configurations.js"
    }
}
