# ============================================================================
# ENVIRONMENT CONFIGURATION
# ============================================================================
# Current environment: local | development | staging | production
NODE_ENV=local

# ============================================================================
# SERVER CONFIGURATION
# ============================================================================
# Port number for the Express server
PORT=8080

# ============================================================================
# DATABASE CREDENTIALS - LOCAL ENVIRONMENT
# ============================================================================
DB_LOCAL_HOST=localhost
DB_LOCAL_PORT=5432
DB_LOCAL_NAME=express_template_local
DB_LOCAL_USER=postgres
DB_LOCAL_PASSWORD=your_local_password
DB_LOCAL_DIALECT=postgres

# ============================================================================
# DATABASE CREDENTIALS - DEVELOPMENT ENVIRONMENT
# ============================================================================
DB_DEV_HOST=localhost
DB_DEV_PORT=5432
DB_DEV_NAME=express_template_dev
DB_DEV_USER=postgres
DB_DEV_PASSWORD=your_dev_password
DB_DEV_DIALECT=postgres

# ============================================================================
# DATABASE CREDENTIALS - STAGING ENVIRONMENT
# ============================================================================
DB_STAGING_HOST=staging-db.example.com
DB_STAGING_PORT=5432
DB_STAGING_NAME=express_template_staging
DB_STAGING_USER=postgres
DB_STAGING_PASSWORD=your_staging_password
DB_STAGING_DIALECT=postgres

# ============================================================================
# DATABASE CREDENTIALS - PRODUCTION ENVIRONMENT
# ============================================================================
DB_PROD_HOST=production-db.example.com
DB_PROD_PORT=5432
DB_PROD_NAME=express_template_prod
DB_PROD_USER=postgres
DB_PROD_PASSWORD=your_production_password
DB_PROD_DIALECT=postgres

# ============================================================================
# JWT (JSON Web Token) CONFIGURATION
# ============================================================================
# Secret key for signing JWT tokens (use a strong, random string in production)
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production

# JWT token expiration time (e.g., 1h, 24h, 7d, 30d)
JWT_EXPIRES_IN=24h

# JWT refresh token expiration time
JWT_REFRESH_EXPIRES_IN=7d

# ============================================================================
# CLIENT-SIDE URLs - LOCAL ENVIRONMENT
# ============================================================================
CLIENT_URL_LOCAL=http://localhost:3001

# ============================================================================
# CLIENT-SIDE URLs - DEVELOPMENT ENVIRONMENT
# ============================================================================
CLIENT_URL_DEV=http://localhost:3001

# ============================================================================
# CLIENT-SIDE URLs - STAGING ENVIRONMENT
# ============================================================================
CLIENT_URL_STAGING=https://staging.example.com

# ============================================================================
# CLIENT-SIDE URLs - PRODUCTION ENVIRONMENT
# ============================================================================
CLIENT_URL_PROD=https://www.example.com

# ============================================================================
# CORS CONFIGURATION
# ============================================================================
# Allowed origins for CORS (comma-separated for multiple origins)

 CORS_ORIGIN_LOCAL=http://localhost:3001,http://localhost:3000
 CORS_ORIGIN_DEV=
 CORS_ORIGIN_STAGING=
 CORS_ORIGIN_PROD=

# ============================================================================
# API CONFIGURATION
# ============================================================================
# API version prefix (e.g., /api/v1)
API_VERSION=v1
API_PREFIX=api
# API rate limiting - requests per window
RATE_LIMIT_MAX_REQUESTS=100

# API rate limiting - time window in minutes
RATE_LIMIT_WINDOW_MINUTES=15

# ============================================================================
# EMAIL CONFIGURATION (Optional)
# ============================================================================
# SMTP host for sending emails
SMTP_HOST=smtp.gmail.com

# SMTP port
SMTP_PORT=587

# SMTP username
SMTP_USER=your_email@gmail.com

# SMTP password or app-specific password
SMTP_PASSWORD=your_email_password

# Email sender name
EMAIL_FROM_NAME=Express Template

# Email sender address
EMAIL_FROM_ADDRESS=noreply@example.com
